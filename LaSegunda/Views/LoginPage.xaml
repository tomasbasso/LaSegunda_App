<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionMovil.Views.LoginPage"
             Title="LoginPage"
             BackgroundColor="White">
    <VerticalStackLayout>
        <Image Source="lslog.jpg" 
               WidthRequest="200"
               HeightRequest="200"
               Aspect="AspectFit" />
        <Label Text="Inicio de Sesión" FontSize="24" FontFamily="sans-serif-condensed" TextColor="#F3131E" HorizontalOptions="Center"/>
        <Entry Placeholder="Nombre de usuario" x:Name="UsernameEntry" Margin="25" TextColor="Black"/>
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="PasswordEntry" TextColor="Black" Margin="25" />
        <Label x:Name="ErrorMessageLabel" TextColor="Red" IsVisible="False" HorizontalOptions="Center"/>
        <Button Text="Ingresar" Clicked="OnLoginButtonClicked" BackgroundColor="#F3131E" TextColor="White" Margin="25"/>
        <Label Text="Mesa de Ayuda" FontSize="20" TextColor="Black" HorizontalOptions="Center" Margin="10"/>
        <Label Text="0800-666-333" FontSize="18" TextColor="#670D03" HorizontalOptions="Center" Margin="10"/>

    </VerticalStackLayout>
</ContentPage>