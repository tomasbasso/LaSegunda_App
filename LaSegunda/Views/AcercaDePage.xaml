<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionMovil.Views.AcercaDePage"
             Title="AcercaDePage"
             BackgroundColor="#F3131E">
    <VerticalStackLayout>
        <Label Text="Tomas Basso Fernandez" TextColor="White" FontFamily="serif" Margin="10" FontSize="20" HorizontalOptions="CenterAndExpand" />
        <Image Source="IMG_2313.jpg"  WidthRequest="200" HeightRequest="200" Margin="10"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Hablemos" BackgroundColor="White" TextColor="#F3131E" Margin="10" WidthRequest="120"/>
            <Button Text="Contacto" BackgroundColor="White" TextColor="#F3131E" Margin="10" WidthRequest="120"/>
        </HorizontalStackLayout>
        <Button HorizontalOptions="Center" Text="Volver" BackgroundColor="White" TextColor="Black" Margin="15" WidthRequest="120" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>